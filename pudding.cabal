build-type:          Simple
cabal-version:       >=2.0

executable pudding
  main-is:             main.hs   
  other-modules:       Pudding.Types.Configuration
                    ,  Pudding.Types.Position
                    ,  Pudding.Types.Internal.Configuration
                    ,  Pudding.Types.Internal.Position
                    ,  Pudding.Types.Internal.SphereAngles
                    ,  Pudding.Utilities.ComplexFunctions
                    ,  Pudding.Utilities.DoubleFunctions
  build-depends:       base >= 4.6, random, vector
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite test
  type:                exitcode-stdio-1.0
  main-is:             mainTest.hs
  other-modules:       Pudding.Types.Internal.Configuration
                    ,  Pudding.Types.Internal.Position
                    ,  Pudding.Types.Internal.SphereAngles
                    ,  Pudding.Types.Position
                    ,  Pudding.Test.Aux
                    ,  Pudding.Test.Types.Configuration
                    ,  Pudding.Test.Types.Position
                    ,  Pudding.Test.Types.SphereAngles
                    ,  Pudding.Test.Utilities.ComplexFunctions
                    ,  Pudding.Test.Utilities.DoubleFunctions
                    ,  Pudding.Utilities.ComplexFunctions
                    ,  Pudding.Utilities.DoubleFunctions
  build-depends:       base >= 4.6, HTF, HUnit, random, vector
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:        -Wall -Wno-missing-signatures
